{
  // ===================================================================
  //  Workbench & UI
  //  ConfiguraÃ§Ãµes da aparÃªncia geral e comportamento do VS Code
  // ===================================================================
  "window.zoomLevel": 1,
  "workbench.activityBar.location": "default",
  "workbench.editor.labelFormat": "short",
  "workbench.editor.enablePreview": false,
  "explorer.compactFolders": false,
  "breadcrumbs.enabled": false,

  // ===================================================================
  //  Editor
  //  ConfiguraÃ§Ãµes do editor de texto
  // ===================================================================
  "editor.fontSize": 12,
  "editor.lineNumbers": "on",
  "editor.tabSize": 2,
  "editor.glyphMargin": false,

  // ===================================================================
  //  Arquivos (Files)
  // ===================================================================
  "files.eol": "\n", // Final de linha sempre serÃ¡ LF

  // ===================================================================
  //  ðŸ›  FormataÃ§Ã£o e Lint (Global)
  // ===================================================================
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  // ===================================================================
  //  ConfiguraÃ§Ãµes por Linguagem
  // ===================================================================
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[xml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[svg]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // ===================================================================
  //  Terminal & Console
  // ===================================================================
  "debug.console.fontSize": 12,
  "terminal.integrated.fontSize": 12,

  // === External Terminal Setup ===
  "terminal.external.windowsExec": "C:\\Program Files\\WindowsApps\\Microsoft.WindowsTerminal_8wekyb3d8bbwe\\wt.exe", // Windows Terminal
  // You can change this to:
  // "C:\\Windows\\System32\\cmd.exe" Â  Â  Â  Â â†’ for CMD
  // "C:\\Program Files\\Git\\bin\\bash.exe" â†’ for Git Bash
  // "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe" â†’ for PowerShell
  "terminal.explorerKind": "external", // Opens terminals outside VS Code
  // Optional: disable internal terminal shortcuts
  "terminal.integrated.defaultProfile.windows": null,

  // ===================================================================
  //  ExtensÃ£o: Code Runner
  // ===================================================================
  "code-runner.clearPreviousOutput": true,
  "code-runner.runInTerminal": true,
  "code-runner.ignoreSelection": true,
  "code-runner.saveAllFilesBeforeRun": true,
  "code-runner.showExecutionMessage": true,
  "code-runner.fileDirectoryAsCwd": true,
  "code-runner.executorMap": {
    "typescript": "clear; npx tsx"
  },

  // ===================================================================
  //  ExtensÃ£o: Tailwind CSS
  // ===================================================================
  // clsx Tailwind settings
  "tailwindCSS.experimental.classRegex": [
    ["clsx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ]
}
